
<section>
    <div class="promotion">
        <div class="promotion-pro">
            {{#each promotion}}
            
                <img src="{{this.img}}" alt="">
            
            {{/each}}
        </div>

    </div>

    <div class="categories">
        {{#each category}}
            <div class="category">
                <div class="des">
                    {{this.description}}
                </div>
                <div>
                    <img src="{{this.img}}" alt="" width="400px" height="400px">
                    
                </div>  
                <div><a href="/products/list">See more</a></div>  
            </div>
        {{/each}}
    </div>

    <div class="bestSeller">
        <p>Best Sellers</p>
        <div class="bsSeller">
            {{#each bestSellerProduct}}
                <div>
                    <a href="/products/list/{{this.id}}"><img src="/img/{{this.productPhoto}}" alt="" width="250px" height="200px"></a>
                </div>
            {{/each}}
        </div>

    </div>
</section>