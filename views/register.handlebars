<div class="register-form">

    {{#each errorMsg}}
        <div class="errors">
            {{this}}
        </div>
    {{/each}}

    <form class="register" method="POST" action ="/registration">
        <legend>Create account</legend>
        <label for="userName">Your Name</label>  
        <input type="text" id="userName" name="userName" value={{user_userName}}> 
        {{#if usernameErrorMsg}}
            <p class="error">{{usernameErrorMsg}}</p>
        {{/if}}

        <label for="email">Email</label>   
        <input type="email" id="email" name="email" value={{user_email}}> 

        {{#if emailErrorMsg}}
            <p class="error">{{emailErrorMsg}}</p>
        {{/if}}

        <label for="password">Password</label>    
        <input type="password" id="password" name="password" value={{user_password}}> 
        <p>Password must consist of at least 6 characters</p>

        {{#if passwordErrorMsg}}
            <p class="error">{{passwordErrorMsg}}</p>
        {{/if}}

        <label for="passwordAgain">Password Again</label>   
        <input type="password" id="passwordAgain" name="passwordAgain"> 

        {{#if passwordAgainErrorMsg}}
            <p class="error">{{passwordAgainErrorMsg}}</p>
        {{/if}}

        <input id="submitbtn" type="submit" value="Create your buyPal account">
        <div>
            By creating an account, you agree to buyPal's
            <a href="">Conditions of Use</a> and <a href="">Privacy Notice.</a>
        </div>
    </form>
    <div id="reg-log">
        Already have an acoount? <a href="/login">Sign in</a>
    </div>
    
</div>